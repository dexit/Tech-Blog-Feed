               <div class="col">
          <div class="card shadow-sm">
           <img class="card-img-top" src="{{product.image}}">   
            <div class="card-body">
              <p class="card-text">{{product.product_name}}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">    {{product.price}}</button>
                <button type="button" id="addtocart" data-product="{{product.id}}" class="btn btn-sm btn-outline-secondary"> ADD TO CART </button>
                </div>
                <small class="text-body-secondary">   {{product.stock}} </small>
              </div>
            </div>
          </div>
        </div>
