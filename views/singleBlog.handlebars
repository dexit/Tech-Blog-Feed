<section class="group-blogs m-2">
  <div class="m-3">
    <div class="container">
      <div class="row d-flex justify-content-center">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-start align-items-center">
              <div>
                <h6
                  class="fw-bold text-primary mb-1"
                >{{blogs.user.first_name}}</h6>
                <p class="text-muted small mb-0">
                  {{format_date blogs.date}}
                </p>
                <div id="buttons">
                  {{#if is_creator}}
                    <button
                      class="text-light btn btn-primary btn-sm"
                      id="updateBtn"
                    >Update</button>
                    <button
                      class="text-light btn btn-primary btn-sm"
                      id="deleteBtn"
                    >Delete</button>
                  {{/if}}
                </div>
              </div>
            </div>
            <p class="mt-3 mb-4">
            </p>
            <hr class="hr" />
            <h5 id="titleUpdate">{{blogs.title}}</h5>
            <div>
              <p id="blogUpdate">{{blogs.content}}</p>
            </div>
          </div>
          <div class="card-footer m-3 rounded border-0">
            <h6>Comments</h6>
            <hr class="hr" />
            <div>
              {{#each blogs.comments as |comments|}}
                <div class="d-flex justify-content-between">
                  <p class="text-primary"> {{comments.user.first_name}}</p>
                  <p>{{format_date comments.createdAt}}</p>
                </div>
                <p>{{comments.content}}</p>
                <hr class="hr" />
              {{/each}}
            </div>
          </div>
          {{#if logged_in}}
            <div
              class="card-footer py-3 border-0"
              style="background-color: #f8f9fa;"
            >
              <div class="d-flex flex-start w-100">
                <div class="form-outline w-100">
                  <textarea
                    class="form-control"
                    id="textAreaExample"
                    rows="4"
                    style="background: #fff;"
                  ></textarea>
                  <label
                    class="form-label"
                    for="textAreaExample"
                  >Message</label>
                </div>
              </div>
              <div class="float-end mt-2 pt-1">
                <button
                  type="button"
                  id="commentBtn"
                  class="btn btn-primary btn-sm"
                >Post comment</button>
              </div>
            </div>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>
{{#if logged_in}}
  <script src="/js/comment.js"></script>
{{/if}}
{{#if is_creator}}
  <script src="/js/update.js"></script>
  <script src="/js/delete.js"></script>
{{/if}}
