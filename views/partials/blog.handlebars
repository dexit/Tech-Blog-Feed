 {{#each blogs as |blog|}}
    <div class=" col-6 p-2 w-50">
      <div class="container blogid" data-blogid="{{blog.id}}">
        <div class="row d-flex  justify-content-center">
          <div class="card " >
            <div class="card-body supaz">
              <div>
                <div>
                  <p class="text-muted  text-left small mb-0">
                   On {{format_date blog.date}} by {{blogs.user.first_name}}
                  </p>
                </div>
              </div>
              <p class="mt-3 mb-4">
                {{blog.content}}
              </p>
              <hr class="hr" />
              <a class="navigationTags" href="/homepage/{{blog.id}}"><h5 class="text-left">{{blog.title}}</h5></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}