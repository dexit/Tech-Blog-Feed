 {{#each blogs as |blog|}}
    <div class="m-3">
      <div class="container  shadow-lg blogid"data-blogid="{{blog.id}}">
        <div class="row d-flex  justify-content-center">
          <div class="card radius-border " >
            <div class="card-body">
              <div>
                <div>
                  <p class="text-muted  text-center small mb-0">
                    {{format_date blog.date}}
                  </p>
                </div>
              </div>
              <p class="mt-3 mb-4">
              </p>
              <hr class="hr" />
              <a class="navigationTags" href="/homepage/{{blog.id}}"><h5 class="text-center">{{blog.title}}</h5></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {{/each}}